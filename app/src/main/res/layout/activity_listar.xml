<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.edu.uac.segundoparcial.ListarActivity">

    <TextView
        android:id="@+id/txtcodigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editl_codigoalmacen"
        android:layout_alignBottom="@+id/editl_codigoalmacen"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/codigoalmacen"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/editl_codigoalmacen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/txtcodigo"
        android:layout_toRightOf="@+id/txtcodigo"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/btnlistar"
        style="@android:style/Widget.Material.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editl_codigoalmacen"
        android:elevation="14dp"
        android:text="@string/listar1"
        tools:ignore="NewApi,UnusedAttribute" />

    <ListView
        android:id="@+id/listar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnlistar" />

</RelativeLayout>
